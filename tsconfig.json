{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "module": "commonjs",
    "strict": true,
    "noLib": false,
    "target": "esnext",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
